{% extends 'dashboard.html.twig' %}

{% block title %}Gérer mon compte{% endblock %}

{% block body %}

<div class="row">

    <h1 class="text-center my-3">Gérer mon compte</h1>

    <div>

        <p>Email : {{ user.email }}</p>
        <p>Prénom : {{ user.firstname }}</p>
        <p>Nom : {{ user.lastname }}</p>

        <p>
            <a href="{{ path('user_edit_user', { 'id': user.id} )}}" class="btn btn-outline-success my-3 text-center">Modifier</a>
        </p>

    </div>
           
</div>
{% endblock %}
