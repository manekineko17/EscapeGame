{% extends 'base.html.twig' %}

{% block title %} Home {{ parent() }} {% endblock %}

{% block body %}

<h1>Liste des escape Games</h1>

    <div class="row">
        <div class="col-10">

                {% for game in games %}
                    <div class="card" style="width: 18rem;">
                        <img src="{{ game.photo }}" class="card-img-top" alt="{{ game.title }}">
                        <div class="card-body">
                        <h5 class="card-title">{{ game.title }}</h5>
                        <a href="{{ path('game', {'id':game.id }) }}" class="btn btn-success">Voir en détail</a>
                        <a class="btn btn-success" href="{{ path('session')}}">Réserver</a>
                        </div>
                    </div>
                {% endfor %}
        </div>
    </div>

{% endblock %}

