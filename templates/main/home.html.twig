{% extends 'base.html.twig' %}

{% block title %} Home {{ parent() }} {% endblock %}

{% block body %}

<h1>Liste des escape Games</h1>

    <div class="row">
        <div class="col-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Titre de l'escape game</th>
                        <th>Lieu</th>
                        <th>Durée</th>
                        <th>Nombre de joueurs maximum</th>
                    </tr>
                </thead>
                <tbody>
                    {% for game in games %}
                    <tr>
                        <td>{{ game.title }}</td>
                        <td>{{ game.place }}</td>
                        <td>{{ game.duration }}</td>
                        <td>{{ game.playersMax }}</td>
                        <td>
                            <a href="{{ path('game', {'id':game.id }) }}" class="btn btn-success">Voir en détail</a>
                        </td>
                        {# <td>
                            <a href="{{ path('booking', {'id':game.id }) }}" class="btn btn-success"><i class="fa fa-check"></i></a>
                        </td> #}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

