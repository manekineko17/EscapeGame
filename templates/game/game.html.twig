{% extends "base.html.twig" %}

{% block title %}Détails des scénario
{% endblock %}

{% block body %}

    <h1 class="my-3 text-center">Nos escape games</h1>

    <div class="container">
        <div class="row mb-3">

                {% for game in games %}
                <div class="col game-list">

                    <div class="card my-3 m-auto" style="width: 30rem;">
                        <img src="{{ game.photo }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h2 class="card-title text-center"><strong>{{ game.title }}</strong></h2>
                            <p><strong>Lieu : </strong>{{ game.place }}</p>
                            <p><strong>Durée : </strong>{{ game.duration }}</p>
                            <p><strong>Nombre de joueurs : </strong>{{ game.playersMax }}</p>
                            <p class="card-text"><em>{{ game.description }}</em></p>
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto mb-4 mt-2">
                            <a href="{{ path('session')}}" class="btn btn-outline-success">Réserver</a>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}